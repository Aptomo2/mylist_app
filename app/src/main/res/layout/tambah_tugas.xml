<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="50dp"
    android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/add_24"
            android:scaleType="centerCrop"/>

        <TextView
            android:fontFamily="@font/nunito_sans_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Tambah Tugas"
            android:textColor="#000000"
            android:textSize="22sp"/>

        <TextView
            android:fontFamily="@font/nunito_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Isi detail di bawah ini untuk menambah tugas"
            android:textAlignment="center"
            android:textColor="#000000"
            android:alpha="0.8"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/nunito_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:alpha="0.8"
            android:text="Judul Tugas"
            android:textStyle="bold"/>

        <EditText
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/btn_border"
            android:padding="10dp"
            android:textColor="#000000"
            android:alpha="0.8"
            android:id="@+id/addTaskTitle"/>

    <TextView
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/nunito_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:alpha="0.8"
        android:text="Deskripsi Tugas"
        android:textStyle="bold"/>

    <EditText
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:background="@drawable/btn_border"
        android:padding="10dp"
        android:textColor="#000000"
        android:alpha="0.8"
        android:id="@+id/addTaskDescription"/>

    <TextView
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/nunito_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:alpha="0.8"
        android:text="Tanggal Tugas"
        android:textStyle="bold"/>

    <EditText
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:background="@drawable/btn_border"
        android:padding="10dp"
        android:textColor="#000000"
        android:alpha="0.8"
        android:id="@+id/taskDate"/>

    <TextView
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/nunito_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:alpha="0.8"
        android:text="Waktu Tugas"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/taskTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/nunito_light"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:alpha="0.8"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addTask"
        android:text="Simpan"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"/>
</LinearLayout>
</ScrollView>